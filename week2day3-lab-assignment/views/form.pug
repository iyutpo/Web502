extends layout 
block content 
    -data = data || {}

    if errors 
        ul 
            for error in errors 
                li= error.msg
    form(action="." method="POST" class="form-registration")
    label(for="name") Name: 
    input(
        type="text"
        id="name"
        name="name"
        class="form-control"
        value=data.name
    )

    label(for="email") Email: 
    input(
        type="email"
        id="email"
        name="email"
        value=data.name
    )

    input(type="submit" value="Submit" class="btn btn-lg btn-primary btn-block")